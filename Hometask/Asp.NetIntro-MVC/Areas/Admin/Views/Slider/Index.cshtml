@model IEnumerable<SliderVM>

@{
    ViewData["Title"] = "Index";
}
<main id="main" class="main">
    <div class="container mt-5">
        <h2 class="text-center">Slider</h2>
        <div class="create-operations ">
            <a asp-action="Create" class="btn btn-success text-white  mt-2"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-dark">
            <thead>
                <tr>

                    <th scope="col" style="background-color:white;color:black">Image</th>
           
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            <img src="~/img/@item.Image" style="width :80px;height:80px"/>
                        </td>
                      
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary text-white btn-sm"><i class="fa-solid fa-circle-info"></i></a>
                            <a class="btn btn-warning text-white btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a>
                            <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger text-white btn-sm"><i class="fa-solid fa-trash"></i></button>
                            </form>
                        </td>

                    </tr>

                }


            </tbody>
        </table>



    </div>
</main>


